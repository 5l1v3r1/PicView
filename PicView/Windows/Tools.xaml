                    <Path.Fill>
                        <SolidColorBrush x:Name="wBrush" Color="{StaticResource MainColor}" />
                    </Path.Fill>
                </Path>
            </Canvas>
            <Button
                x:Name="CloseButton"
                Width="38"
                Height="38"
                VerticalAlignment="Center"
                BorderThickness="0"
                DockPanel.Dock="Right"
                FocusVisualStyle="{x:Null}"
                Focusable="False"
                ToolTip="Close">
                <Button.Background>
                    <SolidColorBrush x:Name="CloseButtonBrush" />
                </Button.Background>
