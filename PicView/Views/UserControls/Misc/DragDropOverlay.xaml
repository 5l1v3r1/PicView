<UserControl
    x:Class="PicView.Views.UserControls.DragDropOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="{StaticResource BackgroundColorBrushFade}">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Panel.ZIndex="1">

            <ContentPresenter x:Name="ContentHolder" />

            <TextBlock
                Margin="0,15,0,0"
                FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Medium"
                FontSize="15"
                Foreground="{StaticResource MainColorBrush}"
                Text="{StaticResource DragOverString}"
                TextAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
