<UserControl
    x:Class="PicView.UILogic.UserControls.Gallery.GalleryMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UC="clr-namespace:PicView.UILogic.UserControls"
    HorizontalAlignment="Center"
    VerticalAlignment="Bottom">
    <StackPanel
        Height="35"
        Margin="0,10,0,15"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal">
        <UC:MenuCloseButton />
        <UC:MinButton Width="51" Background="{StaticResource BackgroundColorBrushAlt}" />
        <UC:BackGroundButton Width="51" Height="35" />
        <UC:RecycleButton Width="51" Height="35" />
        <UC:LeftButton Background="{StaticResource BorderBrushAlt}" />
        <UC:RightButton Background="{StaticResource BorderBrushAlt}" />
        <UC:GoToPicButton />
        <UC:RotateLeftButton Width="51" Height="35" />
        <UC:RotateRightButton Width="51" Height="35" />


    </StackPanel>
</UserControl>
