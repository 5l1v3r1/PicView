<Window
    x:Class="PicView.Views.Windows.FileAssociationsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:PicView.Views.UserControls"
    AllowsTransparency="True"
    Background="{StaticResource BackgroundColorBrushFade}"
    FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto"
    Foreground="{StaticResource MainColorBrush}"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  PressedBrush is used for Pressed in Button, Radio Button, CheckBox  -->

        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Foreground" Value="{StaticResource MainColorBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <!--  BulletDecorator is used to provide baseline alignment between the checkmark and the Content  -->
                            <BulletDecorator x:Name="test" Grid.Column="0">
                                <BulletDecorator.Bullet>
                                    <Canvas Width="15" Height="15">
                                        <Border
                                            x:Name="Border"
                                            Width="15"
                                            Height="15"
                                            Background="Transparent"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                            <Rectangle
                                                x:Name="CheckMark"
                                                Width="8"
                                                Height="8"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Fill="{DynamicResource ChosenColorBrush}"
                                                SnapsToDevicePixels="False" />
                                        </Border>
                                    </Canvas>
                                </BulletDecorator.Bullet>
                            </BulletDecorator>
                            <ContentPresenter
                                Grid.Column="1"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                RecognizesAccessKey="True" />

                        </Grid>
                        <!--  This uses Visibility to hide and show the CheckMark on IsChecked  -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="false">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ResourceKey=ChosenColorBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border
        Width="285"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="{StaticResource NoisyBg}"
        BorderBrush="{DynamicResource WindowBorderColorBrush}"
        BorderThickness="1">
        <DockPanel>
            <Grid
                x:Name="TitleBar"
                Height="35"
                Background="{StaticResource WindowBackgroundColorBrush}"
                DockPanel.Dock="Top">

                <uc:Logo HorizontalAlignment="Left" />

                <uc:CloseButton
                    x:Name="CloseButton"
                    Width="35"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center" />

            </Grid>

            <Rectangle
                Height="1"
                DockPanel.Dock="Top"
                Fill="{StaticResource BorderBrush}" />

            <StackPanel Margin="10,0,10,20">

                <Label Margin="6,5,6,0" Content="Raster formats" />

                <WrapPanel Margin="12,0,12,0">
                    <CheckBox Content=".jpg" IsChecked="True" />
                    <CheckBox Content=".png" IsChecked="True" />
                    <CheckBox Content=".bmp" IsChecked="True" />
                    <CheckBox Content=".ico" IsChecked="True" />
                    <CheckBox Content=".gif" IsChecked="True" />
                    <CheckBox Content=".webp" IsChecked="True" />
                    <CheckBox Content=".jfif" IsChecked="True" />
                    <CheckBox Content=".tiff" IsChecked="True" />
                    <CheckBox Content=".ppm" IsChecked="True" />
                    <CheckBox Content=".wbmp" IsChecked="True" />
                </WrapPanel>

                <Label Margin="6,5,6,0" Content="Photoshop" />

                <StackPanel Margin="12,0,12,0" Orientation="Horizontal">
                    <CheckBox Content=".psd" />
                    <CheckBox Content=".psb" />
                </StackPanel>

                <Label Margin="6,5,6,0" Content="Vector Graphics" />

                <StackPanel Margin="12,0,12,0" Orientation="Horizontal">
                    <CheckBox Content=".svg" />
                </StackPanel>

                <Label Margin="6,5,6,0" Content="Raw Camera Images" />

                <WrapPanel Margin="12,0,12,0" Orientation="Horizontal">
                    <CheckBox Content=".raw" />
                </WrapPanel>

                <Label Margin="6,5,6,0" Content="Other formats" />

                <WrapPanel Margin="12,0,12,0" Orientation="Horizontal">
                    <CheckBox Content=".hdr" />
                    <CheckBox Content=".heic" />
                </WrapPanel>

            </StackPanel>

        </DockPanel>
    </Border>
</Window>
