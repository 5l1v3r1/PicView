<Window
    x:Class="PicView.UI.Windows.FakeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="FakeWindow"
    AllowsTransparency="True"
    Background="{x:Null}"
    Focusable="False"
    Foreground="{x:Null}"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Grid
        x:Name="grid"
        Background="#A4000000"
        FocusVisualStyle="{x:Null}"
        Focusable="False" />
</Window>