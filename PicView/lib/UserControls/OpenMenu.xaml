<UserControl x:Class="PicView.lib.UserControls.OpenMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PicView.lib.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel x:Name="StackPanelz" Width="290" Height="240">

        <Grid>
            <Rectangle Margin="0,50,0,0" HorizontalAlignment="Left" Width="7" Fill="#FF0F0F0F"/>
            <Rectangle Margin="0,50,0,0" HorizontalAlignment="Right" Width="7" Fill="#FF0F0F0F"/>
            <Rectangle Margin="0" VerticalAlignment="Bottom" Height="7" Fill="#FF0F0F0F"/>
            <Canvas VerticalAlignment="Top" Height="51">
                <TextBlock x:Name="bar"
                           Background="#FF0F0F0F"
                           Width="140"
                           TextTrimming="CharacterEllipsis"
                           Padding="25,14"
                           Height="51"
                           FontSize="16"
                           Foreground="#FFF7F4F4"
                           Text="File Menu"
                           FontFamily="/PicView;component/lib/Fonts/#TeX Gyre Heros"
                           FontWeight="Bold" />

                <Button x:Name="CopyButton"
                                Content="Copy"
                                ToolTip="Copy image to clipholder"
                                BorderThickness="0"
                                Canvas.Left="139"
                                Margin="0"
                                Width="51"
                                Height="51" 
                                Padding="0" 
                                FontFamily="/PicView;component/lib/Fonts/#TeX Gyre Heros" FontSize="12" FontWeight="Bold">
                    <Button.Background>
                        <SolidColorBrush x:Name="CopyButtonBrush" Color="#FF0F0F0F"/>
                    </Button.Background>
                </Button>

                <Button x:Name="PasteButton"
                        Content="Paste"
                        ToolTip="Paste image from clipholder"
                        BorderThickness="0"
                        Canvas.Left="189"
                        Margin="0"
                        Width="51"
                        Height="51" 
                        Padding="0"
                        FontFamily="/PicView;component/lib/Fonts/#TeX Gyre Heros" FontSize="12" FontWeight="Bold">
                    <Button.Background>
                        <SolidColorBrush x:Name="PasteButtonBrush" Color="#FF0F0F0F"/>
                    </Button.Background>
                </Button>

                <Button x:Name="CloseButton"
                            ToolTip="Close"
                            FocusVisualStyle="{x:Null}"
                            Canvas.Left="239"
                            Width="51"
                            Height="51"
                            BorderThickness="0">
                    <Button.Background>
                        <SolidColorBrush x:Name="CloseButtonBrush" Color="#FF0F0F0F"/>
                    </Button.Background>
                    <Path Data="F1M0,0L2,0 5,3 8,0 10,0 6,4 10,8 8,8 5,5 2,8 0,8 4,4 0,0z"
                              SnapsToDevicePixels="True"
                              Fill="White" />
                </Button>
            </Canvas>

            <Canvas Margin="0,50,0,6" Width="278" Height="162" VerticalAlignment="Top" Background="#F20F0F0F" >
                <Border x:Name="Open_Border" Style="{StaticResource SexyBorder}" Canvas.Left="7" Canvas.Top="7">
                    <Button x:Name="Open"
                            Width="80"
                            Height="70"
                            Content="Open"
                            ToolTip="Open a file"
                            FontSize="14"
                            FontFamily="/PicView;component/lib/Fonts/#TeX Gyre Heros Cn"
                            FontWeight="Bold"
                            FocusVisualStyle="{x:Null}"/>
                    <Border.Background>
                        <SolidColorBrush x:Name="OpenBorderBrush" Color="#A5232323"/>
                    </Border.Background>
                </Border>

                <Border x:Name="Open_File_Location_Border" Style="{StaticResource SexyBorder}" Canvas.Left="143" Canvas.Top="7">
                    <Button x:Name="Open_File_Location"
                            Width="128"
                            Height="70"
                            Content="Locate on Disk"
                            ToolTip="Shows current image in your file system"
                            FontSize="14"
                            FontFamily="/PicView;component/lib/Fonts/#TeX Gyre Heros Cn"
                            FontWeight="Bold"
                            FocusVisualStyle="{x:Null}"/>
                    <Border.Background>
                        <SolidColorBrush x:Name="OpenFileLocationBorderBrush" Color="#A5232323"/>
                    </Border.Background>
                </Border>

                <Border x:Name="Print_Border" Style="{StaticResource SexyBorder}" Canvas.Left="7" Canvas.Top="85">
                    <Button x:Name="Print"
                            Width="80"
                            Height="70"
                            Content="Print"
                            ToolTip="Print the current image"
                            FontSize="14"
                            FontFamily="/PicView;component/lib/Fonts/#TeX Gyre Heros Cn"
                            FontWeight="Bold"
                            FocusVisualStyle="{x:Null}"/>
                    <Border.Background>
                        <SolidColorBrush x:Name="PrintBorderBrush" Color="#A5232323"/>
                    </Border.Background>
                </Border>
            </Canvas>

        </Grid>

        <Polygon Points="0,0 15,30, 30,0" Fill="#FF0F0F0F" Margin="30,-7,0,0"/>
    </StackPanel>
</UserControl>
