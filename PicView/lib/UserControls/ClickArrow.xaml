<UserControl
    x:Class="PicView.lib.UserControls.ClickArrow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border
        x:Name="border"
        Width="50"
        Height="60"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="1,1,0,1"
        CornerRadius="2,0,0,2">
        <Canvas x:Name="canvas">
            <Polygon
                x:Name="Arrow"
                Canvas.Left="17"
                Canvas.Top="10"
                Width="20"
                Height="40"
                Points="160,128.4 192.3,96 352,256 352,256 352,256 192.3,416 160,383.6 287.3,256"
                RenderTransformOrigin="0.5,0.5"
                Stretch="Uniform">
                <Polygon.Fill>
                    <SolidColorBrush x:Name="ArrowFill" Color="White" />
                </Polygon.Fill>
            </Polygon>
            <Canvas.Background>
                <SolidColorBrush x:Name="CanvasBGcolor" Color="#A7222222" />
            </Canvas.Background>
        </Canvas>
    </Border>
</UserControl>
