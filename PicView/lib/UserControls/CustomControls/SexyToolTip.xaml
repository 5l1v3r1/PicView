<UserControl
    x:Class="PicView.lib.UserControls.SexyToolTip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PicView.lib.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Border
        x:Name="SexyToolTipBorder"
        Margin="0,0,0,95"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        Background="#BF1E1E1E"
        BorderBrush="#FF232323"
        BorderThickness="1"
        CornerRadius="7">
        <TextBlock
            x:Name="SexyToolTipText"
            MaxWidth="438"
            Padding="12"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="/PicView;component/lib/Fonts/#TeX Gyre Heros"
            FontSize="16"
            FontStyle="Italic"
            FontWeight="Bold"
            Foreground="#FFF7F7F7"
            Text="My Awesome Tooltip style :)"
            TextWrapping="WrapWithOverflow" />
    </Border>
</UserControl>
