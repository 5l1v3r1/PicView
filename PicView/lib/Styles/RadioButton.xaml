<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type RadioButton}">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontFamily" Value="/PicView;component/lib/fonts/#Aller"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Border Background="{TemplateBinding Background}">
                        <BulletDecorator Margin="{TemplateBinding Padding}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <BulletDecorator.Bullet>

                                <Grid Height="15" Width="15">
                                    <!--Define size of the Bullet-->
                                    <Path x:Name="TickMark"
                                        Width="9"
                                        Height="9"
                                        Visibility="Collapsed"
                                        SnapsToDevicePixels="False"
                                        StrokeThickness="1"
                                        Stretch="Fill"
                                        Data="M461.6,109.6l-54.9-43.3c-1.7-1.4-3.8-2.4-6.2-2.4c-2.4,0-4.6,1-6.3,2.5L194.5,323c0,0-78.5-75.5-80.7-77.7
	c-2.2-2.2-5.1-5.9-9.5-5.9c-4.4,0-6.4,3.1-8.7,5.4c-1.7,1.8-29.7,31.2-43.5,45.8c-0.8,0.9-1.3,1.4-2,2.1c-1.2,1.7-2,3.6-2,5.7
	c0,2.2,0.8,4,2,5.7l2.8,2.6c0,0,139.3,133.8,141.6,136.1c2.3,2.3,5.1,5.2,9.2,5.2c4,0,7.3-4.3,9.2-6.2L462,121.8
	c1.2-1.7,2-3.6,2-5.8C464,113.5,463,111.4,461.6,109.6z"
                                        Fill="#FF088530"
                                        Margin="0,0,5,0">
                                        <Path.Stroke>
                                            <SolidColorBrush Color="#FF088530" />
                                        </Path.Stroke>
                                    </Path>
                                    <Path x:Name="CrossMark"
                                        Width="9"
                                        Height="9"
                                        Visibility="Visible"
                                        SnapsToDevicePixels="False"
                                        StrokeThickness="1"
                                        Stretch="Fill"
                                        Data="M443.6,387.1L312.4,255.4l131.5-130c5.4-5.4,5.4-14.2,0-19.6l-37.4-37.6c-2.6-2.6-6.1-4-9.8-4c-3.7,0-7.2,1.5-9.8,4
	L256,197.8L124.9,68.3c-2.6-2.6-6.1-4-9.8-4c-3.7,0-7.2,1.5-9.8,4L68,105.9c-5.4,5.4-5.4,14.2,0,19.6l131.5,130L68.4,387.1
	c-2.6,2.6-4.1,6.1-4.1,9.8c0,3.7,1.4,7.2,4.1,9.8l37.4,37.6c2.7,2.7,6.2,4.1,9.8,4.1c3.5,0,7.1-1.3,9.8-4.1L256,313.1l130.7,131.1
	c2.7,2.7,6.2,4.1,9.8,4.1c3.5,0,7.1-1.3,9.8-4.1l37.4-37.6c2.6-2.6,4.1-6.1,4.1-9.8C447.7,393.2,446.2,389.7,443.6,387.1z"
                                        Fill="#FF970C25"
                                        Margin="0,0,6,0">
                                        <Path.Stroke>
                                            <SolidColorBrush Color="#FFB00927" />
                                        </Path.Stroke>
                                    </Path>
                                </Grid>
                            </BulletDecorator.Bullet>

                            <!--Text element-->
                            <TextBlock Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{TemplateBinding Foreground}">
                                <ContentPresenter />
                            </TextBlock>
                        </BulletDecorator>
                    </Border>

                    <!--If item is checked, trigger the visibility of the mark-->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="true">
                            <Setter TargetName="TickMark" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="CrossMark" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>